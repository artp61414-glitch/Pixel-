            db.clearAllData();
            outputDiv.innerHTML = `<p style="color: green; text-align: center;">✅ تم مسح جميع البيانات بنجاح!</p>`;
        });
        
        document.getElementById('viewOrders').addEventListener('click', function() {
            const orders = db.getOrders();
            if (orders.length === 0) {
                outputDiv.innerHTML = `<p style="color: orange; text-align: center;">لا توجد طلبات في قاعدة البيانات</p>`;
                return;
            }
            
            let html = '<h3 style="color: var(--turquoise-dark); margin-bottom: 15px;">طلبات التصميم</h3>';
            html += '<div style="overflow-x: auto;">';
