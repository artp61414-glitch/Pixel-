            html += '<th style="padding: 10px; border: 1px solid #ddd;">التاريخ</th>';
            html += '</tr></thead><tbody>';
            
            orders.forEach(order => {
                html += `<tr style="border-bottom: 1px solid #ddd;">`;
                html += `<td style="padding: 10px;">${order.name}</td>`;
                html += `<td style="padding: 10px;">${order.service}</td>`;
                html += `<td style="padding: 10px;">${order.phone}</td>`;
                html += `<td style="padding: 10px;">${order.date}</td>`;
                html += `</tr>`;
            });
            
            html += '</tbody></table></div>';
            outputDiv.innerHTML = html;
        });
        
        document.getElementById('viewJobs').addEventListener('click', function() {
            const jobs = db.getJobApplications();
