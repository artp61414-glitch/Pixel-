            html += '<th style="padding: 10px; border: 1px solid #ddd;">الاسم</th>';
            html += '<th style="padding: 10px; border: 1px solid #ddd;">المستوى</th>';
            html += '<th style="padding: 10px; border: 1px solid #ddd;">الهاتف</th>';
            html += '<th style="padding: 10px; border: 1px solid #ddd;">التاريخ</th>';
            html += '</tr></thead><tbody>';
            
