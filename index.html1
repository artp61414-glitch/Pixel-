                const order = {
                    name: name,
                    email: email,
                    phone: phone,
                    service: serviceType,
                    message: message,
                    date: today
                };
                
                const orderId = db.addOrder(order);
                
                // إظهار رسالة نجاح
                alert(`✅ تم إرسال طلب التصميم بنجاح! رقم الطلب: ${orderId}\nسيتم التواصل معك قريبًا.`);
                
                // إرسال رسالة واتساب تلقائية (خيارية)
                const whatsappMessage = `مرحبًا، أنا ${name}، أرغب في طلب خدمة ${serviceType}. ${message}. رقم هاتفي: ${phone}`;
                const whatsappUrl = `https://wa.me/775322249?text=${encodeURIComponent(whatsappMessage)}`;
                
                // يمكن فتح نافذة الواتساب تلقائياً
                // window.open(whatsappUrl, '_blank');
            }
            
            // إعادة تعيين النموذج
            this.reset();
        });
        
        // التنقل السلس
        document.querySelectorAll('nav a').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
