        // قاعدة البيانات التفاعلية باستخدام LocalStorage
        class PixelArtDB {
            constructor() {
                this.ordersKey = 'pixelArtOrders';
                this.jobsKey = 'pixelArtJobs';
                this.initDB();
            }
            
            initDB() {
                if (!localStorage.getItem(this.ordersKey)) {
                    localStorage.setItem(this.ordersKey, JSON.stringify([]));
                }
                
                if (!localStorage.getItem(this.jobsKey)) {
                    localStorage.setItem(this.jobsKey, JSON.stringify([]));
                }
            }
            
            addOrder(order) {
                const orders = this.getOrders();
                order.id = Date.now();
                orders.push(order);
                localStorage.setItem(this.ordersKey, JSON.stringify(orders));
                return order.id;
            }
            
            addJobApplication(job) {
                const jobs = this.getJobApplications();
                job.id = Date.now();
                jobs.push(job);
                localStorage.setItem(this.jobsKey, JSON.stringify(jobs));
                return job.id;
            }
            
            getOrders() {
                return JSON.parse(localStorage.getItem(this.ordersKey));
            }
            
            getJobApplications() {
                return JSON.parse(localStorage.getItem(this.jobsKey));
            }
            
            clearAllData() {
                localStorage.setItem(this.ordersKey, JSON.stringify([]));
                localStorage.setItem(this.jobsKey, JSON.stringify([]));
            }
            
            addSampleData() {
                // بيانات تجريبية للطلبات
                const sampleOrders = [
                    {
                        id: 1,
                        name: "أحمد محمد",
